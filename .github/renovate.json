{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "prHourlyLimit": 6,
  "kubernetes": {
    "fileMatch": [
      "\\.yaml$"
    ],
    "ignorePaths": [
      "clusters/"
    ]
  },
  "flux": {
    "fileMatch": [
      "\\.yaml$"
    ]
  },
  "helm-values": {
    "fileMatch": [
      "\\.yaml$"
    ]
  },
  "labels": [
    "renovate"
  ],
  "packageRules": [
    {
      "description": "Minor Patches",
      "matchDatasources": [
        "docker",
        "github-releases",
        "helm"
      ],
      "automerge": true,
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "schedule": [
        "after 4pm and before 11pm every weekday",
        "every weekend"
      ]
    },
    {
      "description": "Restrict Arr Patches",
      "matchPackageNames": [
        "ghcr.io/onedr0p/sonarr-develop",
        "ghcr.io/onedr0p/radarr-develop", 
        "ghcr.io/onedr0p/prowlarr-develop"
      ],
      "matchDatasources": [
        "docker",
        "github-releases"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "schedule": [
        "after 4pm and before 11pm on Monday"
      ]
    },
    {
      "description": "Major Update Tuesday",
      "matchDatasources": [
        "docker",
        "github-releases",
        "helm"
      ],
      "automerge": false,
      "matchUpdateTypes": [
        "major"
      ],
      "schedule": [
        "before 9pm on Tuesday"
      ]
    },
    {
      "description": "Restrict Linuxserver Packages with known odd naming",
      "allowedVersions": "<=2",
      "matchPackageNames": [
        "linuxserver/deluge"
      ]
    },
    {
      "description": "Allow Plex loose package versions",
      "datasources": [
        "docker",
        "github-releases"
      ],
      "versioning": "loose",
      "matchPackageNames": [
        "ghcr.io/onedr0p/plex",
        "ghcr.io/onedr0p/plex-beta"
      ]
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "addLabels": [
        "image-release"
      ]
    },
    {
      "matchDatasources": [
        "helm"
      ],
      "addLabels": [
        "helm-release"
      ]
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "addLabels": [
        "dependency/major"
      ]
    },
    {
      "matchUpdateTypes": [
        "minor"
      ],
      "addLabels": [
        "dependency/minor"
      ]
    },
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "addLabels": [
        "dependency/patch"
      ]
    }
  ]
}
