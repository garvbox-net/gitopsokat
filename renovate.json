{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "baseBranches": [
    "staging"
  ],
  "kubernetes": {
    "fileMatch": [
      "\\.yaml$"
    ],
    "ignorePaths": [
      "clusters/"
    ]
  },
  "flux": {
    "fileMatch": [
      "\\.yaml$"
    ]
  },
  "helm-values": {
    "fileMatch": [
      "\\.yaml$"
    ]
  },
  "packageRules": [
    {
      "datasources": [
        "docker"
      ],
      "versioning": "semver",
      "packageNames": [
        "linuxserver/heimdall",
        "ghcr.io/home-assistant/home-assistant"
      ]
    }
  ]
}