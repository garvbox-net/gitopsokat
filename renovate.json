{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "kubernetes": {
    "fileMatch": [
      "\\.yaml$"
    ],
    "ignorePaths": [
      "clusters/"
    ]
  },
  "flux": {
    "fileMatch": [
      "\\.yaml$"
    ]
  },
  "helm-values": {
    "fileMatch": [
      "\\.yaml$"
    ]
  },
  "labels": ["renovate"],
  "packageRules": [
    {
      "description": "Auto merge Container Minor Updates",
      "matchDatasources": [
        "docker"
      ],
      "automerge": true,
      "automergeType": "pr",
      "ignoreTests": true,
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchPackagePatterns": [
        "ghcr.io/k8s-at-home",
        "ghcr.io/home-assistant"
      ]
    },
    {
      "description": "Auto merge Helm Minor Updates from K8S At Home",
      "matchDatasources": [
        "helm"
      ],
      "automerge": true,
      "automergeType": "pr",
      "ignoreTests": true,
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchPackageNames": [
        "tautulli",
        "sonarr",
        "radarr",
        "jackett",
        "heimdall",
        "jellyfin",
        "home-assistant"
      ]
    },
    {
      "description": "Limit Jackett updates to once a Week",
      "matchPackageNames": [
        "ghcr.io/k8s-at-home/jackett"
      ],
      "schedule": [
        "after 6pm on Monday"
      ]
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "addLabels": [
        "image-release"
      ]
    },
    {
      "matchDatasources": [
        "helm"
      ],
      "addLabels": [
        "helm-release"
      ]
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "addLabels": [
        "dependency/major"
      ]
    },
    {

      "matchUpdateTypes": [
        "minor"
      ],
      "addLabels": [
        "dependency/minor"
      ]
    },
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "addLabels": [
        "dependency/patch"
      ]
    }
  ]
}