{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "kubernetes": {
    "fileMatch": [
      "\\.yaml$"
    ],
    "ignorePaths": [
      "clusters/"
    ]
  },
  "flux": {
    "fileMatch": [
      "\\.yaml$"
    ]
  },
  "helm-values": {
    "fileMatch": [
      "\\.yaml$"
    ]
  },
  "labels": [
    "renovate"
  ],
  "packageRules": [
    {
      "description": "Auto merge All Minor Patches",
      "matchDatasources": [
        "docker",
        "helm"
      ],
      "automerge": true,
      "automergeType": "branch",
      "ignoreTests": true,
      "matchUpdateTypes": [
        "patch"
      ]
    },
    {
      "description": "Restrict Linuxserver Packages with known odd naming",
      "allowedVersions": "<=2",
      "matchPackageNames": [
        "linuxserver/heimdall",
        "linuxserver/deluge"
      ]
    },
    {
      "description": "Limit Jackett updates to once a Week",
      "matchPackageNames": [
        "ghcr.io/k8s-at-home/jackett"
      ],
      "schedule": [
        "after 6pm on Monday"
      ]
    },
    {
      "datasources": [
        "docker"
      ],
      "versioning": "loose",
      "matchPackageNames": [
        "plexinc/pms-docker",
        "ghcr.io/k8s-at-home/plex"
      ]
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "addLabels": [
        "image-release"
      ]
    },
    {
      "matchDatasources": [
        "helm"
      ],
      "addLabels": [
        "helm-release"
      ]
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "addLabels": [
        "dependency/major"
      ]
    },
    {
      "matchUpdateTypes": [
        "minor"
      ],
      "addLabels": [
        "dependency/minor"
      ]
    },
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "addLabels": [
        "dependency/patch"
      ]
    }
  ]
}
